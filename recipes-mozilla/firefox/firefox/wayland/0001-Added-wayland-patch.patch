+  unsigned char* data = static_cast<unsigned char*>(mBufferData);
+  return gfxPlatform::CreateDrawTargetForData(data,
+                                              gfx::IntSize(mWidth, mHeight),
+                                              mWidth*BUFFER_BPP,
+                                              mFormat);
+}
